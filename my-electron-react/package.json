{
  "name": "aw-5-image-viewer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k -r \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "cross-env BROWSER=none wait-on tcp:5173 && electron .",
    "build": "vite build",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "vite": "^5.0.0",
    "electron": "^30.0.0"
  },
  "build": {
    "appId": "com.airworker.aw5imageviewer",
    "directories": { "buildResources": "build" },
    "extraResources": [
      { "from": "public/opencv", "to": "opencv" }
    ],
    "files": ["dist/**", "electron/**", "package.json"],
    "extraMetadata": { "main": "electron/main.js" },
    "win": { "target": "nsis", "icon": "build/icon.ico" },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
